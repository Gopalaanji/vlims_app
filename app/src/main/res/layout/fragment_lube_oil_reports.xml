<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:foo="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
            android:id="@+id/initial_loader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

            <rsr.info.basic.viswaLab.utils.ProgressWheel
                android:id="@+id/initial_loader_progress"
                android:layout_width="@dimen/custom_progressbar_width_height"
                android:layout_height="@dimen/custom_progressbar_width_height"
                android:layout_centerInParent="true"
                ProgressWheel:matProg_barColor="@color/login_btn_click_color"
                ProgressWheel:matProg_circleRadius="140dp"
                ProgressWheel:matProg_progressIndeterminate="true"
                ProgressWheel:matProg_rimWidth="2dp" />

            <ImageView
                android:layout_width="@dimen/custom_progressbar_image_width_height"
                android:layout_height="@dimen/custom_progressbar_image_width_height"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/userArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0.5dp"
                    android:focusableInTouchMode="true"
                    app:cardCornerRadius="0.5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_margin="0dp"
                                android:background="@drawable/bg_spinner">

                                <Spinner
                                    android:id="@+id/spnVesselShips"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp" />

                            </RelativeLayout>
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:background="@drawable/bg_spinner">

                                <Spinner
                                    android:id="@+id/spnEquipment"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp" />
                            </RelativeLayout>
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:visibility="gone">

                            <rsr.info.basic.viswaLab.views.TextViewPlus
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:hint="BRAND AND GRADE"
                                android:textSize="20sp"
                                foo:customFont="@string/font_freedoka" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_margin="0dp"
                                android:background="@drawable/bg_spinner">

                                <Spinner
                                    android:id="@+id/spnBrandandGrads"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp" />
                            </RelativeLayout>
                        </android.support.design.widget.TextInputLayout>

                        <rsr.info.basic.viswaLab.views.TextViewPlus
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:text="SAMPLING"
                            android:textSize="20sp"
                            android:visibility="gone"
                            foo:customFont="@string/font_freedoka" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp">

                                <RelativeLayout
                                    android:id="@+id/sampling_date_from"
                                    android:layout_width="135dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginRight="0dp"
                                    android:background="@drawable/amount_input_border_button"
                                    android:gravity="center">

                                    <rsr.info.basic.viswaLab.views.TextViewPlus
                                        android:id="@+id/tvsampling_date_from"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:gravity="center"
                                        android:hint="Date FROM"
                                        android:textColor="#fff"
                                        android:textColorHint="@color/white" />
                                </RelativeLayout>
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp">

                                <RelativeLayout
                                    android:id="@+id/sampling_date_to"
                                    android:layout_width="135dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginRight="0dp"
                                    android:background="@drawable/amount_input_border_button"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/tvsampling_date_to"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:hint="Date TO"
                                        android:textColor="#fff"
                                        android:textColorHint="@color/white" />
                                </RelativeLayout>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <rsr.info.basic.viswaLab.views.TextViewPlus
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="TEST"
                            android:textSize="20sp"
                            android:visibility="gone"
                            app:customFont="@string/font_sans" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp">

                                <RelativeLayout
                                    android:id="@+id/test_date_from"
                                    android:layout_width="135dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="00dp"
                                    android:layout_marginRight="00dp"
                                    android:background="@drawable/amount_input_border_button"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/tvtest_date_from"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:hint="Test Date FROM"
                                        android:textColor="#fff"
                                        android:textColorHint="@color/white" />
                                </RelativeLayout>
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp">

                                <RelativeLayout
                                    android:id="@+id/test_date_to"
                                    android:layout_width="135dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginRight="00dp"
                                    android:background="@drawable/amount_input_border_button"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/tvtest_date_to"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:hint="Test Date TO"
                                        android:textColor="#fff"
                                        android:textColorHint="@color/white" />
                                </RelativeLayout>
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <rsr.info.basic.viswaLab.utils.ButtonPlus
                                android:id="@+id/btnSubmit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SUBMIT" />

                        </LinearLayout>

                        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:cardCornerRadius="0dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:background="@color/colorPrimary"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:weightSum="3">

                                        <rsr.info.basic.viswaLab.views.TextViewPlus
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:text="Serial Number"
                                            android:textColor="#fff" />

                                        <rsr.info.basic.viswaLab.views.TextViewPlus
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:text="Equipment"
                                            android:textColor="#fff" />

                                        <rsr.info.basic.viswaLab.views.TextViewPlus
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:text="Oil Condition"
                                            android:textColor="#fff" />
                                    </LinearLayout>
                                </LinearLayout>
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/mRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>