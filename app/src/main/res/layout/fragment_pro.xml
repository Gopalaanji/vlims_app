<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_option_one"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/splash_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/muskee_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="-30dp"
                android:layout_marginTop="-35dp"
                android:src="@drawable/muskeeter" />

            <rsr.info.basic.viswaLab.utils.LeagueGothicTextView
                android:id="@+id/muskeeter_head"
                style="@style/white_colour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:background="#6B2C8F"
                android:gravity="center"
                android:padding="5dp"
                android:text="EXPAND YOUR BUSINESS WITH OUR SERVICES"
                android:textAllCaps="true"
                android:textColor="#ffc926"
                android:textSize="25sp" />

            <LinearLayout
                android:id="@+id/muskee_features_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
