<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/dashboard_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <dev.info.basic.viswaLab.views.TextViewPlus
        android:id="@+id/muskee_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/quantum_ic_keyboard_arrow_down_white_36"
        android:gravity="left"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="16sp"
        app:customFont="@string/font_sans"
        android:textColor="#FFF"/>
    <LinearLayout
        android:id="@+id/maskee_title_description_container"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>
</LinearLayout>