<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4">

        <dev.info.basic.viswaLab.views.TextViewPlus
            android:id="@+id/tvShipName"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:lines="2"
            android:text="Ship Name"
            android:textColor="@color/black"
            app:customFont="@string/pt_sans_regular" />

        <dev.info.basic.viswaLab.views.TextViewPlus
            android:id="@+id/tvBunkerDate"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:lines="2"
            android:text="Bunker Date/Port Fuel Grade"
            android:textColor="@color/black"
            app:customFont="@string/pt_sans_regular" />

        <dev.info.basic.viswaLab.views.TextViewPlus
            android:id="@+id/tvDiffTonnes"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:textColor="@color/black"
            app:customFont="@string/pt_sans_regular" />

        <dev.info.basic.viswaLab.views.TextViewPlus
            android:id="@+id/tvQtyRecieved"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:textColor="@color/black"
            app:customFont="@string/pt_sans_regular" />

    </LinearLayout>
</LinearLayout>