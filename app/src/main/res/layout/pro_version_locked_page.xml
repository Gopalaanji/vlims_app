<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page_locked"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#626262"
    android:orientation="vertical">

    <TextView
        android:id="@+id/page_text_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />


    <Button
        android:id="@+id/buy_musketeer"
        style="@style/btn_lg.btn_info"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="Buy Pro Version" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/feature_screenshot"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center|top" />

        <ImageView
            android:id="@+id/overview_stats"
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center|top"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/locked_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignBottom="@id/feature_screenshot"
            android:layout_alignLeft="@id/feature_screenshot"
            android:layout_alignRight="@id/feature_screenshot"
            android:layout_alignTop="@id/feature_screenshot"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center|top"
            android:layout_marginTop="10dp"
            android:alpha="0.4"
            android:contentDescription="@string/app_name"
             />
    </FrameLayout>
</LinearLayout>
